<style>
  .sidebar {
    position: fixed;
    left: 0;
    top: 80px;
    bottom: 0;
    width: 60px;
    background-color: rgba(255, 255, 255, 0.95);
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
    z-index: 90;
    transition: width 0.3s ease;
    overflow: hidden;
    padding-bottom: 20px;
  }
  
  .sidebar:hover {
    width: 220px;
  }

  .sidebar-content {
    padding: 1rem 0;
    height: 100%;
    overflow-y: auto;
    width: 220px;
  }
  
  .widget {
    display: flex;
    align-items: center;
    padding: 0.7rem 1rem;
    margin-bottom: 0.5rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
    white-space: nowrap;
    border-radius: 0 30px 30px 0;
    width: 220px;
    text-decoration: none;
  }
  
  .widget:hover {
    background-color: rgba(50, 69, 255, 0.1);
  }
  
  .widget-icon {
    font-size: 1.3rem;
    width: 24px;
    height: 24px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 1rem;
    flex-shrink: 0;
  }
  
  .widget-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--primary-color);
    overflow: hidden;
    text-overflow: ellipsis;
    opacity: 0;
    transition: opacity 0.3s ease;
    width: 0;
  }
  
  .sidebar:hover .widget-title {
    opacity: 1;
    width: auto;
  }
  
  @media (max-width: 768px) {
    .sidebar {
      width: 50px;
    }
    
    .sidebar:hover {
      width: 200px;
    }
    
    .sidebar-content {
      width: 200px;
    }
    
    .widget {
      width: 200px;
    }
  }
</style>

