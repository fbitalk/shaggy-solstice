---
import NavBar from '../components/NavBar.astro';

interface Props {
  title?: string;
}

const { title = "云之南导航" } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@400;500;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<NavBar />
		<main>
		<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--primary-color: #3245ff;
		--secondary-color: #bc52ee;
		--text-color: #333;
		--bg-color: #f9f9f9;
		--scroll-padding-top: 100px; /* 添加滚动偏移量 */
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Noto Sans SC', sans-serif;
		background-color: var(--bg-color);
		color: var(--text-color);
		scroll-behavior: smooth;
		scroll-padding-top: var(--scroll-padding-top); /* 添加滚动偏移量 */
		overflow-x: hidden;
	}

	main {
		padding-top: 80px;
		min-height: 100vh;
		width: 100%;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	section {
		padding: 4rem 0;
	}

	h1, h2, h3, h4, h5, h6 {
		margin-bottom: 1rem;
	}

	p {
		line-height: 1.6;
		margin-bottom: 1rem;
	}

	.btn {
		display: inline-block;
		padding: 0.8rem 1.5rem;
		background: linear-gradient(83.21deg, var(--primary-color) 0%, var(--secondary-color) 100%);
		color: white;
		text-decoration: none;
		border-radius: 5px;
		font-weight: 500;
		transition: all 0.3s ease;
	}

	.btn:hover {
		transform: translateY(-3px);
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
	}
</style>

<script>
  // 全局脚本，如有需要
</script>
