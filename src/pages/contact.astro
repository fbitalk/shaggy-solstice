---
import Layout from '../layouts/Layout.astro';
---

<Layout title="联系我们 | 导航网站">
	<section class="contact-hero">
		<div class="container">
			<h1 class="page-title">联系我们</h1>
			<p class="lead">有任何问题或项目需求？请随时联系我们</p>
		</div>
	</section>

	<section class="contact-section">
		<div class="container">
			<div class="contact-wrapper">
				<div class="contact-info">
					<h2>联系方式</h2>
					<div class="info-item">
						<div class="info-icon">📍</div>
						<div class="info-content">
							<h3>地址</h3>
							<p>上海市浦东新区科技园区888号</p>
						</div>
					</div>
					
					<div class="info-item">
						<div class="info-icon">📞</div>
						<div class="info-content">
							<h3>电话</h3>
							<p>+86 123 4567 8910</p>
						</div>
					</div>
					
					<div class="info-item">
						<div class="info-icon">✉️</div>
						<div class="info-content">
							<h3>邮箱</h3>
							<p>contact@example.com</p>
						</div>
					</div>
					
					<div class="social-links">
						<a href="#" class="social-link">微博</a>
						<a href="#" class="social-link">微信</a>
						<a href="#" class="social-link">知乎</a>
					</div>
				</div>
				
				<div class="contact-form-wrapper">
					<h2>发送消息</h2>
					<form class="contact-form">
						<div class="form-group">
							<label for="name">姓名</label>
							<input type="text" id="name" name="name" required />
						</div>
						
						<div class="form-group">
							<label for="email">邮箱</label>
							<input type="email" id="email" name="email" required />
						</div>
						
						<div class="form-group">
							<label for="subject">主题</label>
							<input type="text" id="subject" name="subject" required />
						</div>
						
						<div class="form-group">
							<label for="message">消息</label>
							<textarea id="message" name="message" rows="5" required></textarea>
						</div>
						
						<button type="submit" class="submit-btn">发送消息</button>
					</form>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.contact-hero {
		background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
		color: white;
		padding: 6rem 0 4rem;
		text-align: center;
	}

	.page-title {
		font-size: 3rem;
		margin-bottom: 1rem;
		opacity: 0;
		transform: translateY(30px);
	}

	.lead {
		font-size: 1.5rem;
		opacity: 0.9;
		max-width: 600px;
		margin: 0 auto;
		opacity: 0;
		transform: translateY(30px);
	}

	.contact-section {
		padding: 5rem 0;
	}

	.contact-wrapper {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
	}

	.contact-info {
		opacity: 0;
		transform: translateX(-30px);
	}

	.contact-info h2, .contact-form-wrapper h2 {
		font-size: 2rem;
		margin-bottom: 2rem;
	}

	.info-item {
		display: flex;
		margin-bottom: 2rem;
	}

	.info-icon {
		font-size: 2rem;
		margin-right: 1.5rem;
	}

	.info-content h3 {
		margin-bottom: 0.5rem;
		font-size: 1.2rem;
	}

	.info-content p {
		color: #666;
	}

	.social-links {
		display: flex;
		gap: 1rem;
		margin-top: 2rem;
	}

	.social-link {
		padding: 0.8rem 1.5rem;
		background-color: #f5f5f7;
		color: var(--text-color);
		text-decoration: none;
		border-radius: 5px;
		font-weight: 500;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background-color: var(--primary-color);
		color: white;
	}

	.contact-form-wrapper {
		opacity: 0;
		transform: translateX(30px);
	}

	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group label {
		margin-bottom: 0.5rem;
		font-weight: 500;
	}

	.form-group input, .form-group textarea {
		padding: 1rem;
		border: 1px solid #ddd;
		border-radius: 5px;
		font-family: inherit;
		font-size: 1rem;
		transition: border-color 0.3s ease;
	}

	.form-group input:focus, .form-group textarea:focus {
		outline: none;
		border-color: var(--primary-color);
	}

	.submit-btn {
		background: linear-gradient(83.21deg, var(--primary-color) 0%, var(--secondary-color) 100%);
		color: white;
		border: none;
		padding: 1rem;
		border-radius: 5px;
		font-size: 1rem;
		font-weight: 500;
		cursor: pointer;
		transition: all 0.3s ease;
		margin-top: 1rem;
	}

	.submit-btn:hover {
		transform: translateY(-3px);
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
	}

	@media (max-width: 768px) {
		.contact-wrapper {
			grid-template-columns: 1fr;
			gap: 3rem;
		}
		
		.page-title {
			font-size: 2.5rem;
		}
		
		.contact-info {
			margin-bottom: 2rem;
		}
	}
</style>

<script>
	import { gsap } from 'gsap';
	import { ScrollTrigger } from 'gsap/ScrollTrigger';

	document.addEventListener('DOMContentLoaded', () => {
		gsap.registerPlugin(ScrollTrigger);
		
		// 页面标题动画
		const tl = gsap.timeline();
		
		tl.to('.page-title', {
			opacity: 1,
			y: 0,
			duration: 1,
			ease: 'power3.out'
		}).to('.lead', {
			opacity: 1,
			y: 0,
			duration: 1,
			ease: 'power3.out'
		}, '-=0.5');
		
		// 联系信息动画
		gsap.to('.contact-info', {
			scrollTrigger: {
				trigger: '.contact-info',
				start: 'top 80%',
			},
			opacity: 1,
			x: 0,
			duration: 1,
			ease: 'power3.out'
		});
		
		// 表单动画
		gsap.to('.contact-form-wrapper', {
			scrollTrigger: {
				trigger: '.contact-form-wrapper',
				start: 'top 80%',
			},
			opacity: 1,
			x: 0,
			duration: 1,
			ease: 'power3.out'
		});
		
		// 表单提交处理
		const form = document.querySelector('.contact-form');
		if (form) {
			form.addEventListener('submit', (e) => {
				e.preventDefault();
				
				// 添加表单提交动画
				const submitBtn = document.querySelector('.submit-btn');
				const originalText = submitBtn.textContent;
				
				submitBtn.textContent = '发送中...';
				submitBtn.disabled = true;
				
				// 模拟表单提交
				setTimeout(() => {
					// 成功动画
					submitBtn.textContent = '发送成功!';
					
					// 重置表单
					setTimeout(() => {
						form.reset();
						submitBtn.textContent = originalText;
						submitBtn.disabled = false;
					}, 2000);
				}, 1500);
			});
		}
	});
</script> 